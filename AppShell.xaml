<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppListaDeCompras.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppListaDeCompras.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AppListaDeCompras">

    <TabBar>
        <ShellContent
            Title="Listas"
            Icon="icon_lista.png"
            ContentTemplate="{DataTemplate local:ListToBuyPage}"
            Route="ListToBuy" />
    
        <ShellContent
            Title="Perfil"
            Icon="icon_perfil"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="Profile" />
    </TabBar>

</Shell>
